{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

<section class="articles">
{% for article in articles %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt | date('H:i') }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <p>{{ article.content }}</p>
            <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la sutie</a>
        </div>
    </article>
{% endfor %}
</section>

{% endblock %}
